@{
    var greetingMessage = "Sitemize hoşgeldiniz..5 gittiniz....";
    var weekDay = DateTime.Now.DayOfWeek; // Haftanın bulunulan gününü geri döndürür.

    var result = greetingMessage + "Bugün günlerden : " + weekDay;
}

<p>
    @result
</p>
<br />
<hr />
@* Do-While döngüsü *@

@{
    var sayac = 0;

    while (sayac <= 20)
    {
        <span>Şu an @sayac inci sayıdayım...</span>
        <br />
        sayac++;
    }
}
<br />
